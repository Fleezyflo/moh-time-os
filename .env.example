# MOH Time OS — Environment Variables
#
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
#
# Required: All variables must be set for the system to function.
# Optional: Marked as [OPTIONAL] — system will work without them but with reduced functionality.

# ============================================================================
# Identity / Email
# ============================================================================

# Primary admin email — used for Google API delegation and GOG CLI
# Default: molham@hrmny.co
MOH_ADMIN_EMAIL=molham@hrmny.co

# Primary company domain for internal vs external classification
# Default: hrmny.co
MOH_COMPANY_DOMAIN=hrmny.co

# Comma-separated internal email domains
# Default: hrmny.co,hrmny.ae
MOH_INTERNAL_DOMAINS=hrmny.co,hrmny.ae

# [OPTIONAL] Comma-separated domains we send email from (direction detection)
# Default: hrmny.co,hrmny.ae,harmonydigital.co
MOH_OUR_EMAIL_DOMAINS=hrmny.co,hrmny.ae,harmonydigital.co

# ============================================================================
# Authentication & Tokens
# ============================================================================

# Authentication token for Intel API (api/auth.py)
# Required for API endpoint authentication
INTEL_API_TOKEN=your_intel_api_token_here

# Bearer token for Asana API access
# Required to sync tasks and projects from Asana
ASANA_TOKEN=your_asana_bearer_token_here

# Personal Access Token for Asana writer integration
ASANA_PAT=your_asana_pat_here

# [OPTIONAL] Anthropic API key for LLM features (commitment extraction, inbox enrichment)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# Google Workspace — Service Account
# ============================================================================

# [OPTIONAL] Path to Google service account JSON file for Gmail
# Default: ~/.moh_time_os/config/sa.json
GMAIL_SA_FILE=/path/to/sa.json

# [OPTIONAL] Email to delegate Gmail access to
# Default: molham@hrmny.co
GMAIL_USER=molham@hrmny.co

# [OPTIONAL] Path to Google service account JSON file for Calendar
# Default: ~/.moh_time_os/config/sa.json
CALENDAR_SA_FILE=/path/to/sa.json

# [OPTIONAL] Email to delegate Calendar access to
# Default: molham@hrmny.co
CALENDAR_USER=molham@hrmny.co

# [OPTIONAL] Path to Gmail OAuth2 token JSON file (legacy collector path)
GMAIL_TOKEN_PATH=/path/to/.config/.gmail_token.json

# [OPTIONAL] Path to Google Calendar OAuth2 token JSON file (legacy collector path)
GOOGLE_CALENDAR_TOKEN_PATH=/path/to/.config/.google_calendar_token.json

# ============================================================================
# Google Chat
# ============================================================================

# [OPTIONAL] Webhook URL for Google Chat notifications (briefings, alerts)
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN

# [OPTIONAL] Alias for GOOGLE_CHAT_WEBHOOK_URL used by notifier engine
MOH_GCHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN

# [OPTIONAL] Bot token for interactive Google Chat commands
GOOGLE_CHAT_BOT_TOKEN=your_bot_token_here

# ============================================================================
# Asana
# ============================================================================

# Asana workspace name for project sync
# Default: hrmny.co
MOH_ASANA_WORKSPACE=hrmny.co

# ============================================================================
# Xero Integration
# ============================================================================

# [OPTIONAL] OAuth2 client ID for Xero API
XERO_CLIENT_ID=your_xero_client_id_here

# [OPTIONAL] OAuth2 client secret for Xero API
XERO_CLIENT_SECRET=your_xero_client_secret_here

# ============================================================================
# Database & Paths
# ============================================================================

# [OPTIONAL] Override home directory for MOH Time OS
# Default: ~/.moh_time_os
MOH_TIME_OS_HOME=~/.moh_time_os

# [OPTIONAL] Override SQLite database path (used by lib/paths.py)
# Default: ~/.moh_time_os/data/moh_time_os.db
MOH_TIME_OS_DB=/path/to/moh_time_os.db

# [OPTIONAL] Alias for database path (used by secrets_config validation)
DATABASE_PATH=/path/to/moh_time_os.db

# ============================================================================
# API & Web Server
# ============================================================================

# [OPTIONAL] API server host
# Default: 127.0.0.1
HOST=127.0.0.1

# [OPTIONAL] API server port
# Default: 8420
PORT=8420

# [OPTIONAL] Comma-separated CORS origins
# Default: * (all origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# Feature Flags & Runtime
# ============================================================================

# [OPTIONAL] Runtime environment identifier
# Default: current_data_model
MOH_TIME_OS_ENV=current_data_model

# [OPTIONAL] Enable auth debugging for OAuth2 flows (0 or 1)
AUTH_DEBUG=0
