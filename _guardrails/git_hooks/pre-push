#!/usr/bin/env bash
# ============================================
# PRE-PUSH HOOK - ABSOLUTE ENFORCEMENT
# ============================================
# 1. Detects if pre-commit was bypassed
# 2. Runs ALL checks regardless
# 3. Cannot be bypassed with --no-verify

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BOLD='\033[1m'
NC='\033[0m'

cd "$(git rev-parse --show-toplevel)"

# Check if pre-commit was bypassed
MARKER_DIR="/tmp/.git-hooks-$(id -u)"
if [ ! -f "$MARKER_DIR/pre-commit-ran" ]; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}${BOLD}  ⛔ --no-verify DETECTED - COMMIT REJECTED${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo -e "${RED}You bypassed pre-commit hooks with --no-verify.${NC}"
    echo -e "${RED}This is not allowed. Reset your commit and try again properly:${NC}"
    echo ""
    echo -e "  ${YELLOW}git reset --soft HEAD~1${NC}"
    echo -e "  ${YELLOW}git commit${NC}  (without --no-verify)"
    echo ""
    exit 1
fi

# Clear the marker for next commit
rm -f "$MARKER_DIR/pre-commit-ran"

echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}  PRE-PUSH VERIFICATION${NC}"
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# Activate venv
if [ -d ".venv" ]; then
    source .venv/bin/activate 2>/dev/null || true
fi

FAILED=0

# ======================
# GATE 1: Ruff lint
# ======================
echo -e "\n${YELLOW}[1/7] Ruff lint...${NC}"
if command -v ruff &> /dev/null; then
    if ! ruff check lib/ api/ --quiet 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: Ruff lint failed${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
fi

# ======================
# GATE 2: Ruff format
# ======================
echo -e "\n${YELLOW}[2/7] Ruff format...${NC}"
if command -v ruff &> /dev/null; then
    if ! ruff format --check lib/ api/ --quiet 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: Code not formatted${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
fi

# ======================
# GATE 3: Python tests
# ======================
echo -e "\n${YELLOW}[3/7] Fast tests...${NC}"
if ! python -m pytest tests/contract/ tests/test_safety.py -q --tb=no -x 2>/dev/null; then
    echo -e "${RED}❌ BLOCKED: Tests failed${NC}"
    FAILED=1
else
    echo -e "${GREEN}✓ Passed${NC}"
fi

# ======================
# GATE 4: Mypy baseline
# ======================
echo -e "\n${YELLOW}[4/7] Type checking...${NC}"
if [ -f "scripts/check_mypy_baseline.py" ]; then
    if ! python scripts/check_mypy_baseline.py 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: Type errors${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
fi

# ======================
# GATE 5: Security
# ======================
echo -e "\n${YELLOW}[5/7] Secrets scan...${NC}"
if [ -f "scripts/check_secrets.py" ]; then
    if ! python scripts/check_secrets.py 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: Secrets detected${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
fi

# ======================
# GATE 6: UI typecheck
# ======================
echo -e "\n${YELLOW}[6/7] UI typecheck...${NC}"
if [ -d "time-os-ui" ] && command -v pnpm &> /dev/null; then
    cd time-os-ui
    if ! pnpm run typecheck 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: UI typecheck failed${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
    cd ..
fi

# ======================
# GATE 7: Guardrails
# ======================
echo -e "\n${YELLOW}[7/7] Guardrails integrity...${NC}"
if [ -f "scripts/guardrails_integrity.py" ]; then
    if ! python scripts/guardrails_integrity.py 2>/dev/null; then
        echo -e "${RED}❌ BLOCKED: Guardrails tampered${NC}"
        FAILED=1
    else
        echo -e "${GREEN}✓ Passed${NC}"
    fi
fi

# ======================
# FINAL VERDICT
# ======================
echo ""
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}  ❌ PUSH BLOCKED${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    exit 1
fi

echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}  ✅ ALL GATES PASSED${NC}"
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
